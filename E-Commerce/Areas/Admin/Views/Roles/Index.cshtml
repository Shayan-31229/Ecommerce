@using Microsoft.AspNetCore.Identity
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
 

@section Styles {
    <link rel="stylesheet" href="~/css/addons/datatables.min.css" />
    <link rel="stylesheet" href="~/css/buttons.dataTables.min.css" />
}

<div class="page-content">
    <div class="card mb-3">
        <div class="card-body py-2">
            <a  asp-action="Create" class="btn-floating btn-info btn-sm m-0 waves-effect waves-light float-end" title="create new Gate"><i class="fa fa-plus"></i></a>           
            <h3 class="m-0">Index</h3>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="dt table table-striped table-hover table-bordered table-sm">
                    <thead class="aqua-gradient text-white">
                        <tr>
                            <th>Id</th>
                            <th>Name</th> 
                            <th>Actions</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td> 
                                <td>
                                    @* <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-sm py-1 px-2 btn-info"><i class="fa fa-eye"></i></a>  *@
                                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm py-1 px-2 btn-warning"><i class="fa fa-pencil"></i></a> 
                                    <a asp-action="Delete" asp-route-id="@role.Id" onclick="return confirm('Are you sure you want to delete this role?')" class="btn btn-sm py-1 px-2 btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table> 
            </div><!--.table-responsive-->
        </div><!--.card-body-->
    </div><!--.card-->
</div><!--.page-content-->

@section Scripts {
    <script type="text/javascript" src="~/js/addons/datatables.min.js"></script>
    <script type="text/javascript" src="~/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="~/js/buttons.flash.min.js"></script>
    <script type="text/javascript" src="~/js/jszip.min.js"></script>
    <script type="text/javascript" src="~/js/pdfmake.min.js"></script>
    <script type="text/javascript" src="~/js/vfs_fonts.js"></script>
    <script type="text/javascript" src="~/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="~/js/buttons.print.min.js"></script>
    <script type="text/javascript" src="~/js/buttons.colVis.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-datepicker.min.js"></script>
     
    <script type="text/javascript" src="~/js/dt.js"></script>
}

 