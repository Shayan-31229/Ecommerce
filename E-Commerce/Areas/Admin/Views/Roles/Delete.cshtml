@model Microsoft.AspNetCore.Identity.IdentityRole


<div class="page-content">
    <div class="card mb-3">
        <div class="card-body py-2">
            <a asp-action="Index" class="btn-floating btn-info btn-sm my-0 mx-1 waves-effect waves-light float-end" title="Go to listing page"><i class="fa fa-list"></i></a>
            <h3 class="m-0">Delete</h3>
        </div>
    </div>

    <div class="alert alert-danger text-center">Are you sure you want to delete this record?</div>

    <form asp-action="Delete" class="formLoader">
        <div class="card">
            <div class="card-body">
                <div class="row">


                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="box">
                            <span class="caption">@Html.DisplayNameFor(model => model.Name)&nbsp;</span>
                            <div class="value">@Html.DisplayFor(model => model.Name)&nbsp;</div>
                        </div><!--.box-->
                    </div><!--.col-->
                     

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 d-none">
                        <input type="hidden" asp-for="Id" />
                    </div><!--.col-->

                </div><!--.row-->
            </div><!--.card-body-->
            <div class="card-footer">
                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            </div><!--.card-footer-->
        </div><!--.card-->
    </form>
</div><!--.page-content-->
 