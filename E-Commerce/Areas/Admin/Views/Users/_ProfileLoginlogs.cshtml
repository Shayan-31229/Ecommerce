@using E_Commerce.Models.VMs

@model E_Commerce.Models.VMs.VMUserWithRoles

<div class="table-responsive">
    <table class="table dt2 table-striped table-hover" cellpadding="0" cellspacing="0">
        <thead class="aqua-gradient text-white">
            <tr>
                <th>id</th>
                <th>ip</th>
                <th>datetime</th>
                <th>username</th>
                <th>loggedin</th>
                <th>message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (LoginLog l in Model.User.loginLogs)
            {
                <tr>
                    <td>@l.id</td>
                    <td>@l.ip</td>
                    <td>@l.created</td>
                    <td>@l.username</td>
                    <td>@l.loggedin</td>
                    <td>@l.message</td>
                </tr>
            }
        </tbody>
    </table>
</div>