@{
    var flashFunctions = new Dictionary<string, string>
    {
        { "info", "toastr.info" },
        { "success", "toastr.success" },
        { "warning", "toastr.warning" },
        { "danger", "toastr.error" }
    };
}

<script>
    $(function () {
    @foreach (var level in flashFunctions.Keys)
    {
        var key = $"flash-{level}"; 
        if (TempData.ContainsKey(key)) 
        {

            var messages = TempData[key] as string[];// as System.Collections.Generic.List<string>;


            if (messages != null && messages.Any()) 
            {

                foreach (var message in messages) 
                {
                    @Html.Raw($"{flashFunctions[level]}(\"{message}\");")
                }

            } 
        }
    }
});
</script>